<view class="tool-bar" catch:touchend="noop">
  <scroll-view
    class="list"
    catch:touchend="noop"
    scroll-x
    enable-flex
    enhanced
    show-scrollbar="{{false}}"
  >
    <view class="item" bind:tap="image">
      <image class="icon" src="../icon/image.svg"/>
    </view>

    <view class="item" bind:tap="bold">
      <image wx:if="{{formats.bold}}" class="icon" src="../icon/bold-active.svg"/>
      <image wx:else class="icon" src="../icon/bold.svg"/>
    </view>
  </scroll-view>

  <view class="save-left">
    <image class="save-left-shadow" src="../image/save-left-shadow.png" />
  </view>
  <view class="save" bind:tap="save">保存</view>
</view>
