<view class="editor">
<editor
  id="editor"
  class="ql-container"
  placeholder="记录你的想法..."
  bind:statuschange="onStatusChange"
  bind:touchstart="onTouchStart"
  bind:ready="onEditorReady"
  bind:focus="onFocus"
  bind:blur="onBlur"
>
</editor>

<tool-bar
  formats="{{formats}}"
  bind:bold="bold"
  bind:save="save"
/>

<keyboard-area
  show="{{isFocus && isIOS}}"
  keyboardHeight="{{keyboardHeight}}"
  safeAreaBottom="{{safeAreaBottom}}"
>
</keyboard-area>
</view>
