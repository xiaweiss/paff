<scroll-view
  class="paff"
  scroll-y
  scroll-top="{{scrollTop}}"
  scroll-with-animation="{{isIOS}}"
>
  <view
    class="paff-container"
  >
    <node
      id="node"
      node="{{node}}"
    />

    <keyboard
      id="keyboard"
      bind:focus="onFocus"
      bind:blur="onBlur"
    />

    <!-- <view class="cursor" style="left:{{cursorX}}px;top:{{cursorY}}px;" /> -->
  </view>

    <!-- <view class="measure-text"><text space="nbsp">{{measureText}}</text></view> -->
</scroll-view>

<keyboard-area />

<tool-bar
  bind:test="test"
  bind:poster="poster"
  bind:blur="blur"
/>
